<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:padding="15dp"
        android:text="로그인"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp">


        <LinearLayout
            android:id="@+id/id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"   android:layout_marginTop="100dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/idInput"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"

                android:hint="아이디" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="중복확인"
    android:background="@drawable/btn_bg_ex"/>
        </LinearLayout>


        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:password="true"
            android:layout_below="@+id/id_input"
            android:layout_centerHorizontal="true"
            android:hint="비밀번호" />

        <EditText
            android:id="@+id/passwordInput2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:password="true"
            android:layout_below="@+id/passwordInput"
            android:layout_centerHorizontal="true"
            android:hint="비밀번호 확인" />
        <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/passwordInput2"

        android:layout_centerHorizontal="true"
        android:hint="이름" />




        <Button
            android:id="@+id/sign_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:background="@color/main"
            android:text="회원 가입"
            android:textSize="16dp"
            android:onClick="insert"/>


    </RelativeLayout>
</LinearLayout>
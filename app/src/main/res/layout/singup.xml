<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:padding="15dp"
            android:text="  <                            치즈보카"
            android:textAlignment="left"
            android:textColor="#000000"
            android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/sign_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:text="회원가입"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/id_input"
            android:layout_below="@+id/sign_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"   android:layout_marginTop="60dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/idInput"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="아이디" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="중복확인"
                android:background="@drawable/btn_bg_ex"/>
        </LinearLayout>


        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:password="true"
            android:layout_below="@+id/id_input"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:hint="비밀번호" />

        <EditText
            android:id="@+id/passwordInput2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:password="true"
            android:layout_below="@+id/passwordInput"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:hint="비밀번호 확인" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/passwordInput2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:hint="이름" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/name_input"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:hint="이메일" />

        <TextView
            android:id="@+id/emer_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_input"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:text="pw를 잃어버린 경우,\n 이메일을 통해 pw를 보내드리므로 이메일 입력시 주의해주세요."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/sign_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/main"
            android:text="가입하기"
            android:textSize="16dp"
            android:onClick="insert"/>


    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:padding="15dp"
        android:text="치즈보카"
        android:textAlignment="center"
        android:textColor="#000000"

        android:textSize="20dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(1/20)"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#000000"

            android:textSize="14dp" />

        <TextView
            android:id="@+id/voca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="debate"
            android:textColor="#000000"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:textSize="42dp"/>
        <TextView
            android:id="@+id/speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[dɪˈbeɪt]"
            android:textColor="#666"
            android:layout_below="@+id/voca"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/ye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Tell me your impression of the debate"
            android:textColor="#000000"
            android:layout_below="@+id/speech"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"/>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow2"
                android:background="#fff"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"
                android:background="#fff"/>

        <LinearLayout
            android:layout_below="@id/ye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="100dp"
            android:paddingHorizontal="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/shuffle"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="#fff"
                android:layout_weight="1"
                android:src="@drawable/shuffle"/>
            <ImageButton
                android:id="@+id/headset"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_marginHorizontal="60dp"
                android:src="@drawable/headset"/>
            <ImageButton
                android:id="@+id/naver"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="#fff"
                android:layout_weight="1"
                android:src="@drawable/naver"/>
        </LinearLayout>




    </RelativeLayout>
</LinearLayout>

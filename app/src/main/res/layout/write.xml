<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        >

        <TextView
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:padding="15dp"
            android:text="치즈보카"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/voca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="단어를 검색하세요"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:textSize="42dp"/>
        <TextView
            android:id="@+id/speech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text=""
            android:textColor="#fff"
            android:layout_below="@+id/voca"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/mean"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:layout_below="@+id/speech"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:textSize="23dp"/>
        <TextView
            android:id="@+id/mean2"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#fff"
            android:layout_below="@+id/mean"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="23dp"/>


        <TextView
            android:id="@+id/ye"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#fff"
            android:layout_below="@+id/mean2"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"/>


        <EditText
            android:id="@+id/ed1"
            android:layout_below="@id/tab"
            android:layout_width="match_parent"
            android:hint="ex) culture"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="100dp"/>
<LinearLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"  >
    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색하기"
        android:background="@color/main"
        android:paddingHorizontal="43.5dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="21dp"
        android:onClick="insert"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가하기"
        android:background="@color/main"
        android:paddingHorizontal="43.5dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="21dp"
        android:onClick="insert2"
        android:layout_alignParentBottom="true"
        />


  </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="88dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="88dp" />
</LinearLayout>
